  <%- include('header')-%>

  <div class="text-center center-div" id="login">
    <div class="container w-25  py-5">
      <div class="title pb-5">
        <h2 class="font-weight-bold">Login System</h2>
        <span>Log in for the existing user</span>
        <div style="color:orange;">
          <%if(locals.logout){%>
            <div class="alter alert-success text-center">
              <%=logout%>
            </div>
            <%}%>
        </div>
      </div>
      <form action="/route/login" method="POST" class="pt-3">
        <div class="form-group pb-3">
          <input type="email" class="form-control" placeholder="Email" name="email" style="color: white;">
        </div>
        <div class="form-group pb-3">
          <input id="password" type="password" class="form-control" placeholder="Password" name="password" style="color: white;">
          <img id="icon" src="/assets/Closedeyes.png">
        </div>
        <button onclick="remover('dashboard')" type="submit"  class="btn btn-success">Login</button>
      </form>
    </div>
  </div>



  <%- include('footer')-%>
